<Window x:Class="FileByteComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Byte Comparer" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBox x:Name="tbxFileName1" Width="400" Text="{Binding FileName, Mode=TwoWay}" />
                <Button x:Name="btnOpenFile1" Content="Open File" Click="btnOpenFile1_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBox x:Name="tbxFileName2" Width="400" Text="{Binding FileName, Mode=TwoWay}" />
                <Button x:Name="btnOpenFile2" Content="Open File" Click="btnOpenFile2_Click" />
            </StackPanel>
            <Button x:Name="btnCompare" Content="Compare" Margin="4" Click="btnCompare_Click"></Button>
            <TextBlock x:Name="tbResult"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
